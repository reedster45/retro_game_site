<%- include('../partials/header.ejs') %>

<div class="container d-flex justify-content-center">
    <div>
        <h1 class="my-4"><%= game[0].title %></h1>

        <table class="table">
            <tbody>
              <tr>
                <th scope="row">System:</th>
                <td><%= game[0].sys_name %></td>
              </tr>
              <tr>
                <th scope="row">Contributor:</th>
                <td><%= contributor[0].name %></td>
              </tr>
              <tr>
                <th scope="row">Publisher:</th>
                <td><%= game[0].publisher %></td>
              </tr>
              <tr>
                <th scope="row">Year:</th>
                <td><%= game[0].year %></td>
              </tr>
            </tbody>
          </table>
        
        <div class="my-3 mx-auto">
          <a href="/game_manuals/<%= game[0].manual %>" download=""><button class="btn">view/download manual</button></a>
        </div>

        <div>
            <img id="cd" src="/covers/<%= game[0].cover %>" class="img-thumbnail" alt="cover">
            <img id="cd" src="/disks/<%= game[0].disk %>" class="img-thumbnail" alt="disk">
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>